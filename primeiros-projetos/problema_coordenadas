Algoritmo "coordenadas"

Var


   x, y : real
   coordenada : caractere

Inicio

   escreva("Valor de X: ")
   leia(x)
   escreva("Valor de Y: ")
   leia(y)
   
   se (x > 0) e (y > 0) entao
      coordenada <- "Q1"
   senao
      se (x < 0) e (y < 0) entao
         coordenada <- "Q3"
      senao
         se (x > 0) e (y < 0) entao
            coordenada <- "Q4"
         senao
            se (x < 0) e (y > 0) entao
               coordenada <- "Q2"
            senao
               se (x = 0) e (y = 0) entao
                  escreval("Origem")
               senao
                  se x = 0 entao
                     escreval("Eixo Y")
                  senao
                     escreval("Eixo X")
                  fimse
               fimse
            fimse
         fimse
      fimse
   fimse
   
   escreval (coordenada)

Fimalgoritmo